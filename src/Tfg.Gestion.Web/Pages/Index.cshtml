@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Tfg.Gestion.Localization
@using Volo.Abp.Users
@model Tfg.Gestion.Web.Pages.IndexModel
@inject IHtmlLocalizer<GestionResource> L
@inject ICurrentUser CurrentUser

@section styles {
    <abp-style src="/Pages/Index.css" />
}

@section scripts {
    <abp-script src="/Pages/Index.js" />
}

<div class="container">
    <div class="welcome-section">
        <div class="d-inline-block bg-success text-white p-1 h5 rounded mb-4" role="alert">
            <h5 class="m-1"><i class="fas fa-rocket"></i> Congratulations, <strong>Gestion</strong> is successfully running!</h5>
        </div>
        <h1>Welcome to Your Inventory Management System</h1>
        <p class="lead px-lg-5 mx-lg-5">Start managing your inventory more efficiently with our powerful management system.</p>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a class="cta-button" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }

        <div class="action-grid">
            <div class="action-card" onclick="window.location.href='Actions/CreateOrder'">
                <h2>Create New Order</h2>
                <p>Create a new order to manage your inventory.</p>
            </div>
            <div class="action-card" onclick="window.location.href='Orders'">
                <h2>View Order List</h2>
                <p>View the list of all orders in the system.</p>
            </div>
            <div class="action-card" onclick="window.location.href='Orders/Active'">
                <h2>Modify Active Orders</h2>
                <p>Update the status of active orders.</p>
            </div>
            <div class="action-card" onclick="window.location.href='/Customers'">
                <h2>Customers</h2>
                <p>Redirect to the customers page.</p>
            </div>
        </div>
    </div>

    <!-- Resto del contenido del índice -->
</div>
